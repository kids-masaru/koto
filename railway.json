{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
    },
    "deploy": {
        "startCommand": "functions-framework --target=process_chat_message --port=$PORT",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE"
    }
}